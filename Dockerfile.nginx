# Custom Nginx Dockerfile to avoid Docker Hub authentication issues
FROM alpine:latest

# Install nginx
RUN apk add --no-cache nginx

# Create necessary directories
RUN mkdir -p /run/nginx /var/log/nginx /etc/nginx/conf.d /etc/nginx/ssl

# Copy our nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose ports
EXPOSE 80 443

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
